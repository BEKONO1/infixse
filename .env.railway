# Application Configuration
APP_NAME="Infix LMS"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_TIMEZONE=Europe/Paris

# Database - Railway MySQL (Auto-configured by Railway)
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Redis - Railway Redis (Auto-configured by Railway)
REDIS_HOST=${REDISHOST}
REDIS_PORT=${REDISPORT}
REDIS_PASSWORD=${REDISPASSWORD}
REDIS_CLIENT=predis

# Queue & Cache Configuration
QUEUE_CONNECTION=redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Broadcasting (Using Redis for real-time features)
BROADCAST_DRIVER=redis

# File Storage (Using local storage with Railway Volume)
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null

# Mail Configuration (Update with your mail provider)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@infixlms.com
MAIL_FROM_NAME="${APP_NAME}"

# Queue Workers
QUEUE_FAILED_DRIVER=database-uuids

# Cache Prefix
CACHE_PREFIX=infixlms

# Security
APP_CIPHER=AES-256-CBC

# Passport OAuth (Generated after deployment)
PASSPORT_CLIENT_ID=
PASSPORT_CLIENT_SECRET=

# Debug (Keep false in production)
DEBUGBAR_ENABLED=false

# Timezone
TIME_ZONE=Europe/Paris

# Trusted Proxies (Railway)
TRUSTED_PROXIES=*

# Additional Configuration
FORCE_HTTPS=true

# Module Settings (Managed by modules_statuses.json)
# Ensure modules are properly configured before deployment
